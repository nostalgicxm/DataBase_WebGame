CREATE TABLE Players(
	PID  SERIAL PRIMARY KEY,
	PNAME CHAR(10)   NOT NULL,
	MONEY INT        NOT NULL,
	LUCKY INT        NOT NULL,
	WORKABILITY   INT  NOT NULL,
	AT1 CHAR(10)   references TREASURES(TNAME),
	AT2 CHAR(10)   references TREASURES(TNAME),
	Tt1 CHAR(10)   references TREASURES(TNAME)
);

CREATE TABLE Treasures(
	TID  SERIAL PRIMARY KEY,
	TNAME CHAR(10)   NOT NULL UNIQUE,
	TYPE  CHAR(1)        NOT NULL,
	LEVEL INT        NOT NULL
);

CREATE TABLE MARKETS(
	SID SERIAL PRIMARY KEY ,
	PID INT   references PLAYERS(PID),
	TID INT   references TREASURES(TID),
	PRICE INT NOT NULL
);

CREATE TABLE BOX(
	BID  SERIAL PRIMARY KEY ,
	PID INT   references PLAYERS(PID),
	TID INT   references TREASURES(TID)
);